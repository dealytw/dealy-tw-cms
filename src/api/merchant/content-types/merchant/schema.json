{
  "kind": "collectionType",
  "collectionName": "merchants",
  "info": {
    "singularName": "merchant",
    "pluralName": "merchants",
    "displayName": "Merchant"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "merchant_name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "merchant_name"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "site_url": {
      "type": "string"
    },
    "canonical_url": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "store_description": {
      "type": "blocks"
    },
    "page_title": {
      "type": "string",
      "description": "Page title for both page types"
    },
    "page_description": {
      "type": "text",
      "description": "Page description for both page types"
    },
    "short_intro": {
      "type": "text",
      "description": "Short introduction for coupon page"
    },
    "how_to_use": {
      "type": "blocks",
      "description": "How to use the coupon"
    },
    "blog_intro": {
      "type": "text",
      "description": "Introduction for blog page"
    },
    "full_blog_content": {
      "type": "blocks",
      "description": "Full blog content"
    },
    "faq": {
      "type": "component",
      "component": "merchant.faq",
      "repeatable": true
    },
    "auto_seo_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable automatic SEO generation for this merchant"
    },
    "page_approach": {
      "type": "enumeration",
      "enum": [
        "coupon_page",
        "blog_page",
        "both"
      ],
      "default": "both",
      "required": true,
      "description": "Choose the page layout type for this merchant"
    },
    "seo_title": {
      "type": "string",
      "description": "Manual SEO title when auto_seo_enabled is false"
    },
    "seo_description": {
      "type": "text",
      "description": "Manual SEO description when auto_seo_enabled is false"
    },
    "meta_keywords": {
      "type": "text",
      "description": "Meta keywords for manual SEO"
    },
    "coupons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::coupon.coupon",
      "mappedBy": "merchant"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::merchant-category.merchant-category",
      "inversedBy": "merchants"
    }
  }
}
