{
  "kind": "collectionType",
  "collectionName": "coupons",
  "info": {
    "singularName": "coupon",
    "pluralName": "coupons",
    "displayName": "Coupon"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "coupon_uid": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "coupon_title"
    },
    "merchant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::merchant.merchant",
      "inversedBy": "coupons"
    },
    "market": {
      "type": "enumeration",
      "enum": [
        "TW",
        "HK"
      ]
    },
    "coupon_title": {
      "type": "string",
      "required": true
    },
    "coupon_code": {
      "type": "string"
    },
    "coupon_link": {
      "type": "string"
    },
    "coupon_type": {
      "type": "enumeration",
      "enum": [
        "discount",
        "free_shipping",
        "deal"
      ]
    },
    "coupon_discount": {
      "type": "string"
    },
    "coupon_expiry": {
      "type": "date"
    },
    "coupon_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "coupon_description": {
      "type": "text"
    },
    "coupon_terms": {
      "type": "richtext"
    },
    "page_title": {
      "type": "string"
    },
    "page_description": {
      "type": "text"
    },
    "rating_stats": {
      "type": "component",
      "repeatable": false,
      "component": "rating.rating-stats"
    },
    "approval_status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "pending_review",
        "approved",
        "rejected"
      ],
      "default": "draft",
      "required": true
    },
    "reviewer_notes": {
      "type": "text"
    },
    "scheduled_publish_date": {
      "type": "datetime"
    },
    "ai_generated": {
      "type": "boolean",
      "default": false
    },
    "ai_source": {
      "type": "string"
    },
    "priority": {
      "type": "integer",
      "default": 0
    },
    "display_count": {
      "type": "integer",
      "default": 0
    },
    "user_count": {
      "type": "integer",
      "default": 0
    },
    "last_click_at": {
      "type": "datetime"
    },
    "coupon_status": {
      "type": "enumeration",
      "enum": [
        "active",
        "expired",
        "archived"
      ],
      "default": "active"
    },
    "expiration_date": {
      "type": "date"
    },
    "affiliate_link": {
      "type": "string"
    },
    "affiliate_id": {
      "type": "string"
    },
    "commission_rate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "tracking_code": {
      "type": "string"
    },
    "conversion_count": {
      "type": "integer",
      "default": 0
    },
    "revenue_generated": {
      "type": "decimal",
      "min": 0
    }
  }
}
