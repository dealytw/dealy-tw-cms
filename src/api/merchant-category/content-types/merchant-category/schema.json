{
  "kind": "collectionType",
  "collectionName": "merchant_categories",
  "info": {
    "singularName": "merchant-category",
    "pluralName": "merchant-categories",
    "displayName": "Merchant Category",
    "description": "Categories for organizing merchants by type, industry, or theme"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "color": {
      "type": "string",
      "description": "Hex color code for category branding"
    },
    "sort_order": {
      "type": "integer",
      "default": 0,
      "description": "Order for displaying categories"
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "description": "Mark as featured category"
    },
    "seo_title": {
      "type": "string",
      "description": "SEO title for category page"
    },
    "seo_description": {
      "type": "text",
      "description": "SEO description for category page"
    },
    "merchants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::merchant.merchant",
      "mappedBy": "categories"
    }
  }
}

